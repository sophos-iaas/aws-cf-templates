{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Sophos UTM 9 BYOL",
    "Parameters": {
        "VPC": {
            "Type": "AWS::EC2::VPC::Id",
            "Description": "VPCIDtolaunchinto"
        },
        "PublicSubnet": {
            "Description": "Public Subnet",
            "Type": "AWS::EC2::Subnet::Id"
        },
        "PrivateSubnet": {
            "Description": "Private Subnet",
            "Type": "AWS::EC2::Subnet::Id"
        },
        "InstanceType": {
            "Description": "TypeofEC2instancetouse",
            "Type": "String",
            "Default": "m3.medium",
            "AllowedValues": [
                "t1.micro",
                "m1.small",
                "m3.medium",
                "m3.large",
                "m3.xlarge",
                "m3.2xlarge",
                "c3.large",
                "c3.xlarge",
                "c3.2xlarge",
                "c3.4xlarge",
                "c3.8xlarge"
            ]
        },
        "KeyName": {
            "Type": "AWS::EC2::KeyPair::KeyName",
            "Description": "InstanceswilllaunchwiththisKeyPair"
        },
        "EIPAllocationId": {
            "Description": "EIP ID for the instance",
            "Type": "String"
        },
        "CidrIp1": {
            "Description": "CidrIp #1",
            "Type": "String",
            "AllowedPattern": "[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}/[0-9]{1,2}",
            "ConstraintDescription": "Please specify a valid source IP range. Eg: 192.168.2.0/24"
        },
        "CidrIp2": {
            "Description": "CidrIp #2",
            "Type": "String",
            "Default": "0.0.0.0/0",
            "AllowedPattern": "[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}/[0-9]{1,2}",
            "ConstraintDescription": "Please specify a valid source IP range. Eg: 192.168.2.0/24"
        },
        "CidrIp3": {
            "Description": "CidrIp #3",
            "Type": "String",
            "Default": "0.0.0.0/0",
            "AllowedPattern": "[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}/[0-9]{1,2}",
            "ConstraintDescription": "Please specify a valid source IP range. Eg: 192.168.2.0/24"
        },
        "CidrIp4": {
            "Description": "CidrIp #4",
            "Type": "String",
            "Default": "0.0.0.0/0",
            "AllowedPattern": "[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}/[0-9]{1,2}",
            "ConstraintDescription": "Please specify a valid source IP range. Eg: 192.168.2.0/24"
        }
    },
    "Mappings": {
        "AWSInstanceType2Arch": {
            "t1.micro": {
                "Arch": "64"
            },
            "m1.small": {
                "Arch": "64"
            },
            "m3.medium": {
                "Arch": "64"
            },
            "m3.large": {
                "Arch": "64"
            },
            "m3.xlarge": {
                "Arch": "64"
            },
            "m3.2xlarge": {
                "Arch": "64"
            },
            "c3.large": {
                "Arch": "64"
            },
            "c3.xlarge": {
                "Arch": "64"
            },
            "c3.2xlarge": {
                "Arch": "64"
            },
            "c3.4xlarge": {
                "Arch": "64"
            },
            "c3.8xlarge": {
                "Arch": "64"
            }
        },
        "AWSRegionArch2AMI": {
            "us-east-1": {
                "64": "ami-1d180577"
            },
            "us-west-1": {
                "64": "ami-3d7e015d"
            },
            "us-west-2": {
                "64": "ami-ee54a38e"
            },
            "eu-west-1": {
                "64": "ami-32cd4041"
            },
            "ap-southeast-1": {
                "64": "ami-d29044b1"
            },
            "ap-southeast-2": {
                "64": "ami-52defc31"
            },
            "ap-northeast-1": {
                "64": "ami-2d8f9243"
            },
            "sa-east-1": {
                "64": "ami-07840a6b"
            },
            "eu-central-1": {
                "64": "ami-8e01e1e1"
            }
        }
    },
    "Resources": {
        "SecurityGroupPrivate": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Security Group",
                "VpcId": {
                    "Ref": "VPC"
                },
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "-1",
                        "CidrIp": {
                            "Ref": "CidrIp1"
                        }
                    }
                ]
            }
        },
        "SecurityGroupPublic": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Security Group",
                "VpcId": {
                    "Ref": "VPC"
                },
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "CidrIp": {
                            "Ref": "CidrIp2"
                        },
                        "FromPort": "0",
                        "ToPort": "21"
                    },
                    {
                        "IpProtocol": "tcp",
                        "CidrIp": {
                            "Ref": "CidrIp3"
                        },
                        "FromPort": "23",
                        "ToPort": "4443"
                    },
                    {
                        "IpProtocol": "tcp",
                        "CidrIp": {
                            "Ref": "CidrIp4"
                        },
                        "FromPort": "4445",
                        "ToPort": "65535"
                    }
                ]
            }
        },
        "PublicENI": {
            "Type": "AWS::EC2::NetworkInterface",
            "Properties": {
                "SubnetId": {
                    "Ref": "PublicSubnet"
                },
                "Description": "ENI for Public Subnet",
                "GroupSet": [
                    {
                        "Ref": "SecurityGroupPrivate"
                    }
                ],
                "SourceDestCheck": "false"
            }
        },
        "PrivateENI": {
            "Type": "AWS::EC2::NetworkInterface",
            "Properties": {
                "SubnetId": {
                    "Ref": "PrivateSubnet"
                },
                "Description": "ENI for Private Subnet",
                "GroupSet": [
                    {
                        "Ref": "SecurityGroupPrivate"
                    }
                ],
                "SourceDestCheck": "false"
            }
        },
        "Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "Private"
                    }
                ],
                "InstanceType": {
                    "Ref": "InstanceType"
                },
                "KeyName": {
                    "Ref": "KeyName"
                },
                "NetworkInterfaces": [
                    {
                        "NetworkInterfaceId": {
                            "Ref": "PublicENI"
                        },
                        "DeviceIndex": "0"
                    },
                    {
                        "NetworkInterfaceId": {
                            "Ref": "PrivateENI"
                        },
                        "DeviceIndex": "1"
                    }
                ],
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSRegionArch2AMI",
                        {
                            "Ref": "AWS::Region"
                        },
                        {
                            "Fn::FindInMap": [
                                "AWSInstanceType2Arch",
                                {
                                    "Ref": "InstanceType"
                                },
                                "Arch"
                            ]
                        }
                    ]
                }
            }
        },
        "IPAssoc": {
            "Type": "AWS::EC2::EIPAssociation",
            "Properties": {
                "NetworkInterfaceId": {
                    "Ref": "PublicENI"
                },
                "AllocationId": {
                    "Ref": "EIPAllocationId"
                }
            }
        }
    },
    "Outputs": {
        "URL": {
            "Description": "URL to the Gateway portal",
            "Value": {
                "Fn::Join": [
                    "",
                    [
                        "https://",
                        {
                            "Fn::GetAtt": [
                                "Instance",
                                "PublicIp"
                            ]
                        },
                        ":4444"
                    ]
                ]
            }
        }
    }
}
